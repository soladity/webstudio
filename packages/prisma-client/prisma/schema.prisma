// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Team {
  id    String @id @default(uuid())
  users User[]
}

enum Location {
  FS
  REMOTE
}

model Asset {
  id        String   @id @default(uuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  format    String?
  size      Int
  width     Decimal?
  height    Decimal?
  name      String
  alt       String?
  location  Location
  createdAt DateTime @default(now())
}

model User {
  id        String    @id @default(uuid())
  email     String?   @unique
  provider  String?
  image     String?
  username  String?
  createdAt DateTime  @default(now())
  team      Team?     @relation(fields: [teamId], references: [id])
  teamId    String?
  projects  Project[]
}

model Project {
  id         String  @id @default(uuid())
  title      String
  domain     String  @unique
  user       User?   @relation(fields: [userId], references: [id])
  userId     String?
  assets     Asset[]
  devBuild   Build   @relation(name: "devBuild", fields: [devBuildId], references: [id])
  devBuildId String  @unique
  prodBuilds Build[] @relation(name: "prodBuilds")
}

model Build {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  pages         String
  projectDev    Project? @relation(name: "devBuild")
  projectProd   Project? @relation(name: "prodBuilds", fields: [projectProdId], references: [id])
  projectProdId String?
}

model Tree {
  id   String @id @default(uuid())
  root String
}

model InstanceProps {
  id         String @id @default(uuid())
  instanceId String
  treeId     String
  props      String @default("[]")
}

model Breakpoints {
  treeId String @id @default(uuid())
  values String @default("[]")
}
