{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["AUTH_SECRET", "DATABASE_URL", "NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**", "dist/**", "build/**", "api/**", "public/build/**"]
    },
    "dts": {
      "dependsOn": ["build", "^dts"],
      "outputs": ["lib/types/**"]
    },
    "checks": {
      "dependsOn": ["build", "^checks"]
    },
    "storybook:build": {
      "dependsOn": ["build"],
      "outputs": ["storybook-static/**"]
    },
    "size-test": {
      "dependsOn": ["^build"]
    }
  }
}
