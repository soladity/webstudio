// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
  // <output-placeholder-for-migrations>
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Team {
  id    String @id @default(uuid())
  users User[]
}

enum Location {
  FS
  REMOTE
}

model Asset {
  id          String   @id @default(uuid())
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
  format      String?
  size        Int
  name        String
  description String?
  location    Location
  createdAt   DateTime @default(now())
  meta        String   @default("{}")
}

model User {
  id        String    @id @default(uuid())
  email     String?   @unique
  provider  String?
  image     String?
  username  String?
  createdAt DateTime  @default(now())
  team      Team?     @relation(fields: [teamId], references: [id])
  teamId    String?
  projects  Project[]
}

model Project {
  id     String  @id @default(uuid())
  title  String
  domain String  @unique
  user   User?   @relation(fields: [userId], references: [id])
  userId String?
  assets Asset[]

  // Mutable dev build 
  devBuild   Build  @relation(name: "devBuild", fields: [devBuildId], references: [id])
  devBuildId String

  // History of immutable published builds
  // one of which has isCurrentProd=true
  buildsHistory Build[] @relation(name: "buildsHistory")
}

model Build {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  pages     String

  // Used only for immutable published builds
  project       Project? @relation(name: "buildsHistory", fields: [projectId], references: [id])
  projectId     String?
  isCurrentProd Boolean

  // This is not used. Prisma requires all relations to be defined on both sides.
  devProject__ Project[] @relation(name: "devBuild")
}

model Tree {
  id   String @id @default(uuid())
  root String
}

model InstanceProps {
  id         String @id @default(uuid())
  instanceId String
  treeId     String
  props      String @default("[]")
}

model Breakpoints {
  treeId String @id @default(uuid())
  values String @default("[]")
}
