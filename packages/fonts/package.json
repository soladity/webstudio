{
  "name": "@webstudio-is/fonts",
  "version": "0.1.1",
  "description": "Fonts utils",
  "author": "Webstudio <github@webstudio.is>",
  "homepage": "https://webstudio.is",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "checks": "yarn typecheck && yarn lint && yarn test",
    "dev": "tsup --watch",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs && find lib/cjs -name '*.js' | while read NAME; do mv $NAME ${NAME%.js}.cjs; done",
    "build": "rm -fr lib tsconfig.tsbuildinfo && tsc && yarn build:cjs",
    "lint": "eslint ./src --ext .ts,.tsx --max-warnings 0"
  },
  "dependencies": {
    "fontkit": "^2.0.2"
  },
  "devDependencies": {
    "@types/fontkit": "^2.0.0",
    "@webstudio-is/design-system": "*",
    "@webstudio-is/jest-config": "*",
    "tsup": "^6.1.3",
    "typescript": "4.7.4",
    "zod": "^3.19.1"
  },
  "peerDependencies": {
    "zod": "^3.19.1"
  },
  "module": "./lib/index.js",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/cjs/index.cjs"
    },
    "./server": "./server.js"
  },
  "types": "lib/index.d.ts",
  "files": [
    "lib/*",
    "README.md",
    "!*.test.*"
  ],
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/index.server.ts"
    ],
    "format": "esm",
    "outDir": "lib"
  }
}
