{
  "packageManager": "pnpm@7.27.1",
  "name": "turbo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build-packages": "pnpm run --recursive --parallel --filter='!./apps/*' --filter='!./packages/sdk-size-test' build",
    "build": "turbo run build",
    "checks": "turbo run checks",
    "dev": "pnpm run --parallel --recursive dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build-storybook": "build-storybook",
    "storybook": "pnpm run --parallel --recursive storybook:run",
    "storybook:build": "npm run build && turbo run storybook:build",
    "migrations": "cd apps/builder && pnpm migrations --dev",
    "build-figma-tokens": "cd packages/design-system && pnpm build-figma-tokens",
    "prepare": "git config core.hooksPath .git/hooks/ && simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "devDependencies": {
    "@changesets/get-dependents-graph": "^1.3.4",
    "@manypkg/get-packages": "^1.1.3",
    "@storybook/react": "^6.5.16",
    "@types/css-tree": "^2.0.0",
    "@webstudio-is/eslint-config-custom": "workspace:^",
    "chromatic": "^6.11.4",
    "nano-staged": "^0.8.0",
    "prettier": "2.8.4",
    "simple-git-hooks": "^2.8.1",
    "tsx": "^3.12.6",
    "turbo": "^1.7.0",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": "16",
    "pnpm": "7.27",
    "yarn": "This project is configured to use pnpm"
  },
  "nano-staged": {
    "*.{ts,tsx,js,json,css,md}": "prettier --write"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "options": {
          "parser": "babel-ts"
        }
      }
    ]
  },
  "resolutions": {
    "react-dom": "17.0.2",
    "@types/react": "17.0.47",
    "babel-loader": "8.3.0"
  },
  "pnpm": {
    "overrides": {
      "react-dom": "17.0.2",
      "@types/react": "17.0.47",
      "babel-loader": "8.3.0"
    }
  }
}
