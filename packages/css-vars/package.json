{
  "name": "@webstudio-is/css-vars",
  "version": "0.1.0",
  "description": "CSS vars utility",
  "author": "Webstudio <github@webstudio.is>",
  "homepage": "https://webstudio.is",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "checks": "yarn typecheck && yarn lint",
    "dev": "tsup --watch",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs && find lib/cjs -name '*.js' | while read NAME; do mv $NAME ${NAME%.js}.cjs; done",
    "build": "rm -fr lib && tsc && yarn build:cjs",
    "lint": "eslint ./src --ext .ts,.tsx --max-warnings 0",
    "publish-to-npm": "bash ../../bin/publish-to-npm.sh"
  },
  "dependencies": {},
  "devDependencies": {
    "@webstudio-is/jest-config": "*",
    "tsup": "^6.1.3",
    "typescript": "4.7.4"
  },
  "module": "./lib/index.js",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/cjs/index.cjs"
  },
  "types": "src/index.ts",
  "files": [
    "lib/*",
    "src/*",
    "!*.test.*"
  ],
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": "esm",
    "outDir": "lib"
  }
}
